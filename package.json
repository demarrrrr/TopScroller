{
    "author": "Mikhail Shuvalov",
    "version": "3.2.0",
    "description": "Starter project template boilerplate based on Webpack with SASS/PostCSS, ESBuild ESNext and Typescript support.",
    "browserslist": [
        "last 2 versions",
        "> 5%"
    ],
    "dependencies": {
        "bootstrap": "^5.3.2"
    },
    "devDependencies": {
        "@html-eslint/eslint-plugin": "^0.23.1",
        "@html-eslint/parser": "^0.23.0",
        "@principalstudio/html-webpack-inject-preload": "^1.2.7",
        "@types/node": "^20.11.20",
        "@types/webpack-env": "^1.18.4",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "ajv": "^8.12.0",
        "autoprefixer": "^10.4.17",
        "clean-webpack-plugin": "^4.0.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.10.0",
        "dotenv": "^16.4.5",
        "esbuild-loader": "^4.2.0",
        "eslint": "^8.57.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-webpack-plugin": "^4.0.1",
        "fork-ts-checker-webpack-plugin": "^9.0.2",
        "handlebars": "^4.7.8",
        "handlebars-loader": "^1.7.3",
        "html-webpack-plugin": "^5.6.0",
        "image-minimizer-webpack-plugin": "^4.0.0",
        "mini-css-extract-plugin": "^2.8.0",
        "nanoid": "^5.0.6",
        "postcss": "^8.4.35",
        "postcss-loader": "^8.1.0",
        "postcss-preset-env": "^9.4.0",
        "postcss-scss": "^4.0.9",
        "prettier": "^3.2.5",
        "sass": "^1.71.1",
        "sass-loader": "^14.1.1",
        "sass-rem": "^4.0.0",
        "sharp": "^0.33.2",
        "style-loader": "^3.3.4",
        "stylelint": "^16.2.1",
        "stylelint-config-recommended": "^14.0.0",
        "stylelint-config-standard": "^36.0.0",
        "stylelint-config-twbs-bootstrap": "^14.0.0",
        "stylelint-webpack-plugin": "^5.0.0",
        "svgo-loader": "^4.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "webpack": "^5.90.3",
        "webpack-bundle-analyzer": "^4.10.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.2",
        "webpack-merge": "^5.10.0"
    },
    "engines": {
        "node": ">=18.12"
    },
    "keywords": [
        "webpack",
        "boilerplate",
        "template",
        "setup"
    ],
    "license": "MIT",
    "private": false,
    "scripts": {
        "dev": "cross-env NODE_OPTIONS=--loader=ts-node/esm webpack serve --config configuration/webpack.dev.config.ts --mode=development",
        "build": "cross-env NODE_OPTIONS=--loader=ts-node/esm webpack --config configuration/webpack.prod.config.ts",
        "build:wp": "cross-env is_wp=true no_hash=true NODE_OPTIONS=--loader=ts-node/esm webpack --config configuration/webpack.prod.config.ts",
        "lint:sass": "sass-lint -v -q",
        "lint:js": "eslint --ext .js src/assets/js/",
        "typecheck": "tsc --noEmit",
        "stats": "cross-env NODE_OPTIONS=--loader=ts-node/esm webpack --config configuration/webpack.prod.config.ts --mode=production --json > dist/stats.json && webpack-bundle-analyzer dist/stats.json"
    },
    "target": "web"
}
